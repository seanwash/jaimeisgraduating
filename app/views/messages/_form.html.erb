<%= form_for @message do |f| %>
	<fieldset class="card">
		<div class="field">
			<%= f.label :author, 'Your Name' %>
			<%= f.text_field :author %>

			<% if @message.errors[:author].any? %>
				<span class="help-text error"><%= @message.errors[:author][0] %></span>
			<% end %>
		</div>
		<div class="field">
			<%= f.label :email, 'Email' %>
			<%= f.email_field :email %>

			<% if @message.errors[:email].any? %>
				<span class="help-text error"><%= @message.errors[:email][0] %></span>
			<% end %>
		</div>
		<div class="field">
			<%= f.label :content, 'What would you like to say?' %>
			<%= f.text_area :content, class: 'redactor' %>

			<% if @message.errors[:content].any? %>
				<span class="help-text error"><%= @message.errors[:content][0] %></span>
			<% end %>
		</div>
		<div class="field actions">
			<%= link_to 'Cancel', root_path, class: 'button cancel' %>
			<%= f.submit 'Submit', class: 'commit' %>
		</div>
	</fieldset>
<% end %>
